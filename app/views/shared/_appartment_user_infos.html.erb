<div class="user-infos bg-white mb-2 p-3 rounded-4 shadow-sm user-infos bounce-in-top">
  <div class="d-flex gap-2">
    <%= cl_image_tag user.photo.key, width: 75, height: 75%>
    <div class="flex-grow-1">
      <p class="fs-5"><%= user.first_name %> <%= user.last_name %></p>
      <p class="mb-3 opacity-50"><%= user.email %></p>
      <% unless current_user == user %>
        <div class="d-flex justify-content-end">
          <% chatroom = current_user.chatroom_with(user) %>
          <%= link_to "Contacter", chatroom_path(chatroom), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>