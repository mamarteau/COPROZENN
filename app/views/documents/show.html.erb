<div class="container-fluid" style="padding: 0;">
  <div class="container mt-5 d-flex justify-content-center">
    <div class = "card border-0 rounded shadow-lg p-4" style="max-width: 700px; width: 100%;">
      <div class="form-group mb-3">
        <h2 class="display-5" style="color:rgb(86, 87, 87); font-family: 'Arial', sans-serif; text-align: center; font-size: 2.5rem;border-bottom: 1px solid rgb(221, 219, 219); padding-bottom: 10px;">
        <%= @document.name %></h2>
        <p>Tag : <%= @document.tag %></p>
        <h4 style="color:rgb(86, 87, 87)" style="font-family: 'Arial', sans-serif;">Ajouté par</h4><%= @document.user.last_name %></h2>
      </div>

      <div class="form-group mb-3">
        <h4 style="color:rgb(86, 87, 87)" style="font-family: 'Arial', sans-serif;">Ajouté pour</h4>
        <% if @document.documentable_type == "meeting" %>
          <p>Réunion</p>
        <% else @document.documentable_type == "decision" %>
          <p>Décision</p>
        <% end %>
      </div>

      <div class="form-group mb-3">
        <%= cl_image_tag @document.file.key, class:"d-block w-100" %>
      </div>

      <div class="form-group mb-3">
      <%= link_to "Tous les documents", documents_path, class:"button-card"%>
      </div>

    </div>
  </div>
</div>
