<div class="container mt-5">
  <h1>My Documents</h1>
    <div class="container mt-5">
      <div class="row justify-content-evenly g-3">
        <% if @documents.empty? %>
        <div class="card" style="color: #6c757d; width: 15rem; margin: auto; height: 16rem; overflow: hidden; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: box-shadow 0.3s ease-in-out;">
          <div class="card-body" style="padding: 1rem;">
             <h5 class="card-title" style="color: #6c757d; font-size: 1rem; margin-bottom: 0.25rem;text-align: center;">No document here yet!</h5>
          </div>
        </div>
        <% else %>
          <% @documents.each do |document| %>
            <div class="card" style="width: 18rem;">
              <%= cl_image_tag document.file.key, class:"d-block w-100" %>
              <%= link_to "See the document", document_path(document), class:"button-card"%>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
</div>
