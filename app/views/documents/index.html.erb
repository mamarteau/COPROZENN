  <div class="row justify-content-evenly g-3">
    <% if !@documents.empty? %>
      <% @documents.each do |document| %>
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag file.key, class:"d-block w-100" %>
      <% end %>
    <% end %>
          </div>
        </div>
    <%= link_to "See the document", document_path(document), class:"button-card"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
