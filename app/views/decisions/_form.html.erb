<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Cr√©er une decision</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <%= simple_form_for [meeting, decision] do |f| %>
          <div class="card-body">
            <div class="row">
              <div class="col">
              <%= f.input :description, label: "Description" %>
            </div>
            <div class="form-group mb-3">
              <%= f.input :file, as: :file, label: "Document" %>
            </div>
            <div class="form-group mb-3">
              <%= f.input :document_name, label: "Nom document" %>
            </div>
            <div class="form-group mb-3">
              <%= f.input :document_tag, label: "Tag document" %>
            </div>

            <div class="d-flex justify-content">
              <%= f.submit "Submit", class: "secondary-btn secondary-btn:focus secondary-btn:hover" %>
            </div>
          <% end %>
            </div>
          </div>
      </div>
      </div>
    </div>
  </div>
