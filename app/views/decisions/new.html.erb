<div class="container mt-5 d-flex justify-content-center">
  <div class = "card border-0 rounded shadow-lg p-0" style="max-width: 700px; width: 100%;">

  <div class="card-header">
  <h2 class="text-center card-text">Cr√©er une decision</h2>
  </div>
    <%= simple_form_for [@meeting, @decision] do |f| %>
    <div class="card-body">
      <div class="row">
        <div class="col">
        <%= f.input :description, label: "Description" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :file, as: :file, label: "Document" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :document_name, label: "Nom document" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :document_tag, label: "Tag document" %>
      </div>

      <div class="d-flex justify-content">
        <%= f.submit "Submit", class: "secondary-btn secondary-btn:focus secondary-btn:hover" %>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>
