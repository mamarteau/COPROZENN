<div class="container mt-5 d-flex justify-content-center">
  <div class = "card border-0 rounded shadow-lg p-4" style="max-width: 700px; width: 100%;">

  <h2 class="text-center" style = "color: #595959;">Cr√©er une decision</h2>
    <%= simple_form_for [@meeting, @decision] do |f| %>
      <div class="form-group mb-3">
        <%= f.input :description, label: "Description" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :file, as: :file, label: "Document" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :document_name, label: "Nom document" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input :document_tag, label: "Tag document" %>
      </div>
      <div class="d-flex justify-content">
        <%= f.submit "Submit", class: "button-card" %>
      </div>
    <% end %>
  </div>
</div>
