<div id="<%= dom_id(meeting) %>" class="container mt-5 justify-content-center">

      <div class="show-card-header mb-3">
        <h4 class=""><strong>Informations </strong></h4>
      </div>
      <div class="px-3">
        <p><i><%= l(meeting.date, format: :long) %></i></p>
        <p><%= meeting.link %></p>
        <p><%= meeting.description %></p>
      </div>

  <div class="d-flex flex-column gap-4" data-controller="vote">
  <div class="show-card py-3 mb-3 position-relative">
    <div class="show-card-header mb-3">
      <h4 class=""><strong>DÃ©cisions</strong></h4>
      <button type="button" class="modal-btn p-0" data-bs-toggle="modal" data-bs-target="#exampleModal">
         <p class="button-plus-right">+</p>
      </button>
      <%= render "/decisions/form", meeting: meeting, decision: decision %>
    </div>
    <div class="px-3 d-flex flex-column gap-2">
      <% meeting.decisions.each do |decision| %>
        <%= render "meetings/decision", decision: decision %>
      <% end %>
  </div>
</div>
</div>


  <div class="show-card mt-3 py-3 mb-3 position-relative">
    <div class="show-card-header mb-3 ">
      <h4 class=""><strong>Documents</strong></h4>
      <%= link_to "+", new_meeting_document_path(meeting), class:"button-plus-right"%>
    </div>
  <div class="px-3">
    <% if meeting.documents.any? %>
      <% meeting.documents.each do |document| %>
      <div class=" p-2 d-flex justify-content-between align-items-left flex-column ">
        <div class="lien ">
          <%= link_to document_path(document), class: "text-decoration-none d-flex align-items-center mb-1" do %>
            <%= image_tag "document_icone.png", width: 30, height: 30, class: "me-2 " %>
            <p class="mb-0 me-2 "><%= document.name %></p>
          <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>


</div>
