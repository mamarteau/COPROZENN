<div class="container">
  <h4><strong>Mes prochaines réunions :</strong></h4>
  <br>
  <div class="row meeting-cards">
    <% @meetings.each do |meeting| %>
      <div class="col-9 col-sm-12 col-md-12">
        <div class="meeting-card">
          <div class="meeting-card-header flex-row justify-content-around align-items-center">
            <p ><i><%= l(meeting.date, format: :long) %></i></p>
            <div class="d-flex justify-content-center align-items-center">
              <i class="fa-regular fa-clock me-2"></i>
              <p>18h</p>
            </div>
          </div>
          <%= link_to meeting_path(meeting) do %>
            <div class="p-3 meeting-card-body";>
              <p class="card-title"><%= meeting.title %></p>
              <p style="font-size: 14px;" class="card-text"><em><%= meeting.description %></em></p>
            </div>
          <% end %>
          <div class ="card-text-icone ps-2">
            <button type="button" class="modal-btn p-0" data-bs-toggle="modal" data-bs-target="#exampleModal">
              <i class="fa-solid fa-plus" style="font-size: 12px; color:#9f2b68;"></i> <span style="font-size: 12px; color: #5f0f40;">Ajouter des décisions</span>
            </button>
            <br>
            <%= link_to meeting_documents_path(meeting) do %>
              <i class="fa-regular fa-eye" style="font-size: 12px; color: #9f2b68;"></i> <span style="font-size: 12px; color: #5f0f40;"> Accéder aux documents</span>
            <% end %>
          </div>
        </div>

        <%= render "decisions/form", meeting: meeting, decision: @decision %>
      </div>
    <% end %>
  </div>
  <br>
  <h4><strong>Mes actualités :</strong></h4>
  <br>

  <div>
    <% if @unread_messages_counter.present? %>
      <div class="document-affichage" style="margin-bottom:10px;">
        <div class="document-icon">
        <i class="fa-regular fa-comments"></i>
        </div>
        <div class="document-name">
          <p><%= @unread_messages_counter %> nouveau(x) message(s)</p>
        </div>
      </div>
    <% end %>

    <% documents = current_user.coproperty.documents.where("created_at > ?", Date.current) %>
    <% if documents.any? %>
      <% documents.each do |document| %>
        <div class="document-affichage" style="margin-bottom:10px;">
          <div class="document-icon">
            <i class="fa-regular fa-file"></i>
          </div>
          <div class="document-name">
            <p> <%= document.name %> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
